record Person {
    char name[40];
    char id[10];
};

file people "people.dat";
Person person;

function void write_records() {
    person.name = "ALICE";
    person.id = "0001";

    open(people, "w");
    write(people, person);
    close(people);
}

function void main() {
    write_records();
}
